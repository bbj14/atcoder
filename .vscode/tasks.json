{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-7 build active file",
            "command": "/usr/bin/g++-7",
            "args": [
                "-g",
                "${file}",
                "-I",
                "/mnt/d/Codes/ac-library",
                "-std=c++17",
                "-D=_GLIBCXX_DEBUG",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "atcoder-tools test",
            "command": "atcoder-tools test",
            "args": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always",
                "clear": true,
                "echo": false,
            },
        },
        {
            "type": "shell",
            "label": "atcoder-tools submit",
            "command": "atcoder-tools submit",
            "args": [],
            "group": "test",
            "options": {
                "cwd": "${fileDirname}"
            },
        },
    ],
    "version": "2.0.0"
}